---
const navigation = [
  { name: "Inicio", href: "/" },
  { name: "Nosotros", href: "/nosotros/" },
  { name: "Blog", href: "/blog/" },
  { name: "Proceso", href: "/proceso/" },
  { name: "MenÃº", href: "/menu/" },
  { name: "GalerÃ­a", href: "/galeria/" },
  { name: "Contacto", href: "/contacto/" },
];
const currentPath = Astro.url.pathname;
const isActive = (href: string) => {
  if (href === "/") return currentPath === "/";
  return currentPath.startsWith(href);
};
---

<nav class="flex flex-col items-center lg:flex-row gap-3">
  {
    navigation.map((item) => (
      <a
        class={`${isActive(item.href) ? "text-coffee-400" : "text-white hover:text-coffee-400"} uppercase text-lg font-bold`}
        href={item.href}
      >
        {item.name}
      </a>
    ))
  }
</nav>
