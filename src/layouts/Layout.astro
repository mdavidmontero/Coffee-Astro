---
import { ClientRouter, fade, slide } from "astro:transitions";
import "@/styles/global.css";
import Header from "@/components/ui/Header.astro";
import Footer from "@/components/ui/Footer.astro";
interface Props {
  title: string;
  subtitle: string;
  bgImage: string;
}

const { title, bgImage, subtitle } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cafeteria desde 1939: {title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@100..900&family=PT+Sans:wght@400;700&display=swap"
      rel="stylesheet"
    />
    <ClientRouter />
  </head>
  <body class="bg-coffee-100">
    <Header
      bgImage={bgImage}
      subtitle={subtitle}
      transition:animate={fade({ duration: ".5s" })}
    />
    <main class="bg-white p-10 lg:p-20 max-w-7xl mx-auto lg:-mt-20 relative">
      <div transition:animate={fade({ duration: "1s" })}>
        <h2
          class="text-coffee-900 font-black text-center text-4xl pb-10 uppercase after:coffee-icon"
        >
          {title}
        </h2>
        <slot />
      </div>
    </main>
    <slot name="after-main-content" />
    <Footer />
  </body>
</html>
